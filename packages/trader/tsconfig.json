{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "_common/*": ["src/_common/*"],
            "App/*": ["src/App/*"],
            "Assets/*": ["src/Assets/*"],
            "Constants/*": ["src/Constants/*"],
            "Fonts/*": ["src/public/fonts/*"],
            "Images": ["src/public/images"],
            "Modules/*": ["src/Modules/*"],
            "Sass/*": ["src/sass/*"],
            "Services/*": ["src/Services/*"],
            "Stores/*": ["src/Stores/*"],
            "Translations/*": ["src/public/translations/*"],
            "Types": ["src/Types"],
            "Utils/*": ["src/Utils/*"],
            "@deriv/*": ["../*/src"]
        },
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "include": ["src", "../../globals.d.ts", "../../utils.d.ts"]
}
